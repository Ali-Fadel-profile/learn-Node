extends Layouts/main-layouts.pug 

block styles 
        link(rel="stylesheet", href="/css/product.css")
block content 
            if products.length > 0
                        .grid
                            each product in products
                                article.card.product-item
                                    header.card__header
                                        h1.product__titleGreat #{product.title}
                                    .card__image
                                        img(src="https://cdn.pixabay.com/photo/2015/11/19/21/10/glasses-1052010_960_720.jpg", alt="A Book")
                                    .card__content
                                        h1.product__price $19.99
                                        p.product__description A very interesting book about so many even more interesting things!
                                    .card__actions
                                        button.btn Add to Cart
            else 
                        h1 NO Products
